mixin link(label)
  a.link-with-icon(href='https://www.google.com/')
    span.mr-5=label
    svg.icon.icon--main
      use(xlink:href="/src/assets/images/icons/sprite.svg#icon-rounded-triangle")

mixin introSection({ headline, titles, description, link })
  .intro-inner
    .intro-thumb
      - const slots = {}
      mixin slot(name)
        - slots[name] = block
      block

      if (slots['picture'])
        - slots['picture']()

    .intro-content
      if headline
        .intro-headline.text-sm-medium.js-stagger=headline
      .intro-lead.js-stagger
        each title in titles
          span=title
          br
      .intro-sub
        .intro-description.js-stagger=description
        .intro-link.js-stagger
          +link(link)