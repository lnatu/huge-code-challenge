mixin indexes(classes)
  .featured-indexes(class=classes)
    .featured-indexes__item.active(data-index='0') 01
    .featured-indexes__item(data-index='1') 02
    .featured-indexes__item(data-index='2') 03
    .featured-indexes__item(data-index='3') 04

.featured
  .featured-inner
    +indexes

    .featured-content
      .featured-content__lead
        .title-xl.js-stagger Our Featured Funds
        +indexes('featured-indexes--mobile')
        .featured-content__text.js-stagger Nikko AM ARK Disruptive Innovation Fund
      .featured-content__graph.js-stagger
        img(src='/src/assets/images/graph.svg' alt='graph')
      .featured-content__summary
        ul.featured-summary__list
          li.featured-summary__item.js-stagger
            span.featured-summary__title NAV (per 100 shares)
